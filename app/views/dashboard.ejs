<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
    <!-- Card de Projetos -->
    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-700">Projetos Ativos</h3>
            <div class="bg-indigo-100 text-indigo-800 px-2 py-1 rounded-full text-xs font-semibold">
                <%= projectsCount %>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <div>
                <p class="text-3xl font-bold"><%= completedProjects %></p>
                <p class="text-sm text-gray-500">Concluídos</p>
            </div>
            <div class="w-24 h-24">
                <canvas id="projectsChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Card de Tarefas -->
    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-700">Tarefas Pendentes</h3>
            <div class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded-full text-xs font-semibold">
                <%= pendingTasks %>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <div>
                <p class="text-3xl font-bold"><%= completedTasks %></p>
                <p class="text-sm text-gray-500">Concluídas</p>
            </div>
            <div class="w-24 h-24">
                <canvas id="tasksChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Card de Equipe -->
    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-medium text-gray-700">Membros da Equipe</h3>
            <div class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-semibold">
                <%= teamMembers %>
            </div>
        </div>
        <div class="flex items-center space-x-2">
            <% for(let i = 0; i < Math.min(teamAvatars.length, 5); i++) { %>
                <img src="<%= teamAvatars[i] %>" alt="Team member" class="w-10 h-10 rounded-full border-2 border-white">
            <% } %>
            <% if(teamAvatars.length > 5) { %>
                <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center text-xs font-semibold">
                    +<%= teamAvatars.length - 5 %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Gráfico de Progresso -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-medium text-gray-700 mb-4">Progresso dos Projetos</h3>
        <canvas id="progressChart" height="200"></canvas>
    </div>

    <!-- Atividades Recentes -->
    <div class="bg-white p-6 rounded-lg shadow">
        <h3 class="text-lg font-medium text-gray-700 mb-4">Atividades Recentes</h3>
        <div class="space-y-4">
            <% activities.forEach(activity => { %>
                <div class="flex items-start">
                    <div class="flex-shrink-0 mr-3">
                        <img src="<%= activity.avatar %>" alt="User" class="w-8 h-8 rounded-full">
                    </div>
                    <div>
                        <p class="text-sm font-medium"><%= activity.user %></p>
                        <p class="text-sm text-gray-600"><%= activity.action %></p>
                        <p class="text-xs text-gray-400"><%= activity.time %></p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<script>
// Inicialização dos gráficos será movida para main.js
document.addEventListener('DOMContentLoaded', function() {
    // Charts initialization will be moved to public/js/main.js
});
</script>
